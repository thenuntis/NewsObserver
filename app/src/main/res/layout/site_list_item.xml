<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/list_item_backColor">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/iconImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/img_border"
        android:contentDescription="@string/imgDescr"/>

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconImg"
        android:layout_toEndOf="@+id/iconImg"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pubDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iconImg"
        android:layout_toEndOf="@+id/iconImg"
        android:textSize="12sp"
        android:layout_below="@id/nameTxt"      />

    <TextView
        android:id="@+id/authorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iconImg"
        android:layout_toEndOf="@+id/iconImg"
        android:layout_below="@id/pubDateTxt"
        android:textSize="12sp"        />

</RelativeLayout>